local NitrateORE = game:GetService("ReplicatedStorage").Entities.NitrateOre.Part

local esp = Instance.new("BoxHandleAdornment")
esp.Name = "nit"
esp.Adornee = NitrateORE
esp.Visible = TomatoWareSettings.World.NitrateEnabled
esp.AlwaysOnTop = true
esp.Size = Vector3.new(2.3,2.3,2.3)
esp.Transparency = 0.2
esp.Color3 = TomatoWareSettings.World.NitrateColor
esp.Parent = NitrateORE
esp.ZIndex = 1

